<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'enter title'%>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: 'form-control', placeholder: 'enter description'%>
  </div>
  <div class="form-group">
    <%= f.text_field :movie_length, class: 'form-control', placeholder: 'enter movie_length'%>
  </div>
  <div class="form-group">
    <%= f.text_field :director, class: 'form-control', placeholder: 'enter director' %>
  </div>
  <div class="form-group">
    <%= f.text_field :rating, class: 'form-control', placeholder: 'enter rating'%>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
